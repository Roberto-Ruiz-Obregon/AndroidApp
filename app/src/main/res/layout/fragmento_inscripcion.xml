<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Inscripcion"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="12dp"
    tools:layout_editor_absoluteY="0dp">
    <ImageView
        android:id="@+id/imagen"
        android:layout_width="405dp"
        android:layout_height="160dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/escritura" />

    <TextView
        android:id="@+id/Titulo"
        android:layout_width="339dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_slab"
        android:gravity="center_horizontal"
        android:text="Inscripcion a Curso de escritura"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombre_ponente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/roboto"
        android:text="Jose Hernandez"
        app:layout_constraintBottom_toTopOf="@+id/imagen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.158"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Titulo"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/texto_curso"
        android:layout_width="323dp"
        android:layout_height="74dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:text="Lleva tus habilidades para crear artesanias al siguiente nivel, aprende a pintar con acuarelas y técnicas de dibujo."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagen" />

    <TextView
        android:id="@+id/pi_nombre"
        android:layout_width="130dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:text="Ramiro Peréz Ruiz"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto_curso" />

    <TextView
        android:id="@+id/name1"
        android:layout_width="56dp"
        android:layout_height="23dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:text="Nombre:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto_curso" />

    <TextView
        android:id="@+id/pi_edad"
        android:layout_width="37dp"
        android:layout_height="23dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/roboto"
        android:text="16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.339"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto_curso" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="36dp"
        android:layout_height="22dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/roboto"
        android:text="Edad:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto_curso" />

    <TextView
        android:id="@+id/pi_municipio"
        android:layout_width="61dp"
        android:layout_height="22dp"
        android:layout_marginTop="144dp"
        android:fontFamily="@font/roboto"
        android:text="Amealco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto_curso" />

    <TextView
        android:id="@+id/pi_sexo"
        android:layout_width="73dp"
        android:layout_height="23dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/roboto"
        android:text="Masculino"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.325"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto_curso" />

    <TextView
        android:id="@+id/name3"
        android:layout_width="38dp"
        android:layout_height="24dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/roboto"
        android:text="Sexo:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto_curso" />

    <TextView
        android:id="@+id/pi_academico"
        android:layout_width="89dp"
        android:layout_height="30dp"
        android:layout_marginTop="184dp"
        android:fontFamily="@font/roboto"
        android:text="Estudiante"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toEndOf="@+id/name5"
        app:layout_constraintTop_toBottomOf="@+id/texto_curso" />

    <TextView
        android:id="@+id/name4"
        android:layout_width="72dp"
        android:layout_height="20dp"
        android:layout_marginTop="148dp"
        android:fontFamily="@font/roboto"
        android:text="Municipio:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.162"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto_curso" />

    <TextView
        android:id="@+id/name5"
        android:layout_width="128dp"
        android:layout_height="32dp"
        android:layout_marginTop="184dp"
        android:fontFamily="@font/roboto"
        android:text="Nivel Academico:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto_curso" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:padding="16dp"
        android:layout_height="wrap_content"
        android:text="Inscribirme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pi_academico"
        app:layout_constraintVertical_bias="0.228" />

</androidx.constraintlayout.widget.ConstraintLayout>