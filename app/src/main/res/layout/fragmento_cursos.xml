<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentRight="false"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toTopOf="@+id/titulo_cursosG"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.428" />

        <TextView
            android:id="@+id/titulo_cursosG"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/roboto_slab"
            android:text="Programas y Becas AcadÃ©micas"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SearchView
            android:layout_width="197dp"
            android:layout_height="29dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/titulo_cursosG"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.891"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="411dp"
            android:layout_height="279dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titulo_cursosG">

            <androidx.cardview.widget.CardView
                android:id="@+id/curso1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/titulo_curso_card_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imagen_curso1"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="47dp"
                        android:fontFamily="@font/roboto_slab"
                        android:text="Alimentos"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imagen_curso1"
                        android:layout_width="122dp"
                        android:layout_height="61dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/curso2" />

                    <TextView
                        android:id="@+id/des_ccurso2"
                        android:layout_width="145dp"
                        android:layout_height="47dp"
                        android:layout_below="@id/titulo_curso_card_1"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/roboto"
                        android:paddingTop="0dp"
                        android:text="Lleva tus habilidades para crear artesanias al siguiente nivel, aprende a pintar con acuarelas y tecnicas de dibujo."
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textSize="8sp" />

                    <ImageView
                        android:id="@+id/calendario_curso1"
                        android:layout_width="33dp"
                        android:layout_height="22dp"
                        android:layout_below="@+id/des_ccurso2"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="12dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="8dp"
                        app:srcCompat="@drawable/calendario" />

                    <TextView
                        android:id="@+id/fecha_curso1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/des_ccurso2"
                        android:layout_alignRight="@id/calendario_curso1"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="-53dp"
                        android:fontFamily="@font/roboto"
                        android:text="10-3- 2022"
                        android:textSize="10sp" />

                    <ImageView
                        android:id="@+id/pago_curso1"
                        android:layout_width="35dp"
                        android:layout_height="22dp"
                        android:layout_below="@id/calendario_curso1"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="12dp"
                        app:srcCompat="@drawable/pago" />

                    <TextView
                        android:id="@+id/locacion_curso1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/des_ccurso2"
                        android:layout_alignRight="@id/calendario_curso1"
                        android:layout_marginTop="14dp"
                        android:layout_marginRight="-116dp"
                        android:fontFamily="@font/roboto"
                        android:text="Zoom"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/cobro_curso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fecha_curso1"
                        android:layout_alignRight="@id/calendario_curso1"
                        android:layout_marginTop="19dp"
                        android:layout_marginRight="-42dp"
                        android:fontFamily="@font/roboto"
                        android:text="Gratis"
                        android:textSize="10sp" />

                    <ImageView
                        android:id="@+id/ping_curso1"
                        android:layout_width="22dp"
                        android:layout_height="16dp"
                        android:layout_below="@id/des_ccurso2"
                        android:layout_alignRight="@id/fecha_curso1"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="68dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="61dp"
                        android:layout_marginRight="-27dp"
                        android:layout_toEndOf="@+id/calendario_curso1"
                        app:srcCompat="@drawable/ping" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/curso2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:rotationX="0"
                    android:rotationY="0">

                    <ImageView
                        android:id="@+id/imagen_curso2"
                        android:layout_width="124dp"
                        android:layout_height="62dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/curso2" />

                    <TextView
                        android:id="@+id/titulo_curso_card_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imagen_curso2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/roboto_slab"
                        android:text="Escritura"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/des_ccurso"
                        android:layout_width="145dp"
                        android:layout_height="47dp"
                        android:layout_below="@+id/titulo_curso_card_2"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="14dp"
                        android:layout_marginBottom="70dp"
                        android:fontFamily="@font/roboto"
                        android:paddingTop="0dp"
                        android:text="Lleva tus habilidades para crear artesanias al siguiente nivel, aprende a pintar con acuarelas y tecnicas de dibujo."
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textSize="8sp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>