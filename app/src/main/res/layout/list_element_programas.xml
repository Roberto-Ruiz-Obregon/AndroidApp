<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPrograma"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp"
    android:layout_margin="8dp">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTituloPrograma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imPrograma"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_slab"
                android:text="Escritura"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imPrograma"
                android:layout_width="122dp"
                android:layout_height="61dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/curso2" />
            <!-- Cambiar y agregar el Drawable de programas-->

            <TextView
                android:id="@+id/tvDescripcionPrograma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTituloPrograma"
                android:layout_centerInParent="true"
                android:paddingTop="16dp"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Descripcion"
                android:textAlignment="viewStart" />

            <ImageView
                android:id="@+id/imCalendario"
                android:layout_width="33dp"
                android:layout_height="22dp"
                android:layout_below="@id/tvDescripcionPrograma"
                android:layout_centerVertical="true"
                android:layout_marginTop="14dp"
                android:paddingLeft="12dp"
                android:paddingRight="8dp"
                app:srcCompat="@drawable/calendario" />

            <ImageView
                android:id="@+id/imPagoPrograma"
                android:layout_width="35dp"
                android:layout_height="22dp"
                android:layout_below="@id/imCalendario"
                android:layout_marginTop="6dp"
                app:srcCompat="@drawable/pago" />

            <TextView
                android:id="@+id/tvFechaPrograma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/imCalendario"
                android:layout_alignParentTop="true"
                android:layout_marginTop="168dp"
                android:layout_marginRight="-56dp"
                android:fontFamily="@font/roboto"
                android:text="10-3- 2022"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvLocacionPrograma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/imCalendario"
                android:layout_alignParentTop="true"
                android:layout_marginTop="168dp"
                android:layout_marginRight="-115dp"
                android:fontFamily="@font/roboto"
                android:text="Zoom"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvPagoPrograma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/imCalendario"
                android:layout_alignParentTop="true"
                android:layout_marginTop="194dp"
                android:layout_marginRight="-30dp"
                android:fontFamily="@font/roboto"
                android:text="Gratis"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/imPingPrograma"
                android:layout_width="22dp"
                android:layout_height="16dp"
                android:layout_below="@id/tvDescripcionPrograma"
                android:layout_alignRight="@id/tvFechaPrograma"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="65dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:layout_marginRight="-30dp"
                android:layout_toEndOf="@+id/imCalendario"
                app:srcCompat="@drawable/ping" />

            <Button
                android:id="@+id/botonPrograma"
                android:layout_width="77dp"
                android:layout_height="48dp"
                android:layout_below="@+id/tvLocacionPrograma"
                android:layout_alignEnd="@+id/tvLocacionPrograma"
                android:layout_marginStart="58dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="-13dp"
                android:text="Ver mas"
                android:textSize="8sp" />

        </RelativeLayout>






</androidx.cardview.widget.CardView>